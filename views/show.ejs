<% include partials/header %>

    <div class="ui main text container segment">
        <div class="ui huge header"><%= b.title %></div>
        <div class="ui top attached">
            <div class="item">
                <img src="<%= b.image %>" class="ui centered rounded large bordered image">
                <br/>
                <div class="content">
                    <span><%= b.created.toDateString() %></span>
                </div>
                <br/>
                <div class="description">
                    <p><%- b.body %></p>
                </div>
                <br/>
                <a class="ui blue basic button" href="/blogs/<%= b._id %>/edit">Edit</a>
                <form id="delete" action="/blogs/<%= b._id %>?_method=DELETE" method="post">
                    <button class="ui red basic button">Delete</button>
                </form>
            </div>
        </div>
    </div>
    

<% include partials/footer %>