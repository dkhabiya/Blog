<% include ../partials/header %>
    <div class="ui main text container">
        <% if(blogs.length) { %>
            <div class="ui huge header">Blogs</div>
            <div class="ui top attached segment">
                <div class="ui divided items">
                    <% blogs.forEach(function(blog){ %>
                        <div class="item">
                            <div class="image">
                                <img src="<%= blog.image %>">        
                            </div>
                            <div class="content">
                                <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                                <div class="meta">
                                    <span><%= blog.created.toDateString() %></span>
                                </div>
                                <div class="description">
                                    <p><%- blog.body.substring(0, 50); %>...</p>        
                                </div>
                                <div class="extra">
                                    <a class="ui floated basic grey button" href="/blogs/<%= blog._id %>">
                                        Read More
                                    </a>  
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } else { %>
            <div class="ui hidden divider"></div>
            <div class="ui huge center aligned header">
                Get Started! Click on Create Post to create a new blog post.
            </div>
        <% } %>
    </div>

<% include ../partials/footer %>