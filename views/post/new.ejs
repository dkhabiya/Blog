<% include ../partials/header %>
    <div class="ui main text container segment">
        <div class="ui huge header">New Post</div>
        <form class="ui form" method="post" action="/posts">
            <div class="field required">
                <label>Title</label>
                <input type="text" name="post[title]" placeholder="Title" required>
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="post[image]" placeholder="Image URL">
            </div>
            <div class="field">
                <label>Post</label>
                <textarea name="post[body]" placeholder="Post"></textarea>
            </div>
            <button class="ui secondary button" name="Post">Save</button>
            <a class="ui button" href="/posts">Cancel</a>
        </form>
    </div>
<% include ../partials/footer %>