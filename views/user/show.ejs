<% include ../partials/header %>
    
    <div class="ui main text container segment">
    <h2 class="ui header">Account Details</h2>
    <div class="ui hidden divider"></div>
    <form class="ui form" action="" method="">
      <div class="two fields">
        <div class="field disabled">
          <label>First Name</label>
          <input placeholder="First Name" name="user[firstName]" type="text" value="<%= currentUser.firstName %>">
        </div>
        <div class="field disabled">
          <label>Last Name</label>
          <input placeholder="Last Name" name="user[lastName]" type="text" value="<%= currentUser.lastName %>" >
        </div>
      </div>
      <div class="field disabled">
        <label>E-mail</label>
        <input placeholder="E-mail" name="user[email]" type="email" value="<%= currentUser.email %>" >
      </div>
      <div class="two fields">
        <div class="disabled field">
          <label>Username</label>
          <input placeholder="Username" name="user[username]" type="text" value="<%= currentUser.username %>">
        </div>
        <div class="field disabled">
          <label>Password</label>
          <input placeholder="Password" name="user[password]" type="password" required>
        </div>
      </div>
      <div class="ui hidden divider"></div>
      <a href="/posts" class="ui button">Back</a>
      <div class="ui hidden divider"></div>
    </form>
  </div>
    
<% include ../partials/footer %>